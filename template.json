{
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Ubuntu_64",
      "iso_url": "http://de.releases.ubuntu.com/16.04/ubuntu-16.04.2-server-i386.iso",
      "iso_checksum": "736f2c5700313494a2282092ca0f8b0048883ed48c5fdcf585d6e1852a3a110f",
      "iso_checksum_type": "sha256",
      "vm_name": "packer-ubuntu-16.04-i386",
      "disk_size": "{{ user `disk_size` }}",
      "headless": "{{ user `headless` }}",
      "boot_wait": "5s",
      "http_directory": "http",
      "boot_command": [
        "<enter><wait>",
        "<f6><esc>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs>",
        "/install/vmlinuz ",
        "initrd=/install/initrd.gz ",
        "auto=true ",
        "priority=critical ",
        "net.ifnames=0 ",
        "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
        "<wait><enter>"
      ],
      "ssh_wait_timeout": "30m",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "shutdown_command": "sudo systemctl poweroff",
      "vboxmanage": [
        ["modifyvm", "{{ .Name }}", "--memory", "{{ user `memory` }}"],
        ["modifyvm", "{{ .Name }}", "--cpus", "{{ user `cpus` }}"]
      ]
    }    
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": "scripts/install.sh"
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/playbook.yml",
      "playbook_dir": "ansible"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "compression_level": 9,
        "output": "pe-ubuntu-16.04-i386.box",
        "keep_input_artifact": false
      }
    ]
  ],
  "variables": {
    "cpus": "1",
    "memory": "512",
    "hostname": "xenial",
    "headless": "false",
    "disk_size": "8192"
  }
}
